    <style name="OrderButton1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/img_group12</item> <!-- Используем созданный фон -->
        <item name="android:textColor">@android:color/black</item> <!-- Цвет текста -->
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:textStyle">bold</item> <!-- Размер текста -->
        <item name="android:padding">16dp</item> <!-- Отступы внутри кнопки -->
        <item name="android:elevation">8dp</item> <!-- Эффект тени -->
        <item name="android:gravity">center</item> <!-- Выравнивание текста -->
     </style>
