<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".buyeractivity">



    <!-- Перемещаем нижнее меню вниз -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_border_green_600_radius_18"
        app:labelVisibilityMode="unlabeled"
         />



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        >

        <LinearLayout

            android:id="@+id/linearColumnmaskgroup"
            style="@style/groupStylewhite_A700"
            android:layout_above="@id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameSearchResults"
                android:layout_width="match_parent"
                android:layout_height="12222dp"
                android:background="#80000000"
                android:visibility="gone">

                <!-- Включите здесь ваш макет для результатов поиска -->
                <include layout="@layout/item_search_result" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameStackmaskgroup"
                style="@style/groupStylewhite_A700"
                android:layout_width="match_parent"
                android:layout_height="65dp">


                <LinearLayout
                    android:id="@+id/linearColumnmsarlina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbarToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:gravity="center_horizontal"
                        app:contentInsetStart="0dp">

                        <LinearLayout
                            android:id="@+id/linearRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/linearRowrewind"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_2pxv"
                                android:layout_marginBottom="@dimen/_1pxv"
                                  android:orientation="horizontal">

                                <ImageButton
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/btnSearch"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@android:color/transparent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_rewind"
                                    tools:ignore="ContentDescription"
                                    tools:src="@drawable/img_rewind" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/txtSearchProduct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="42dp"
                                android:layout_marginTop="12dp"
                                android:ellipsize="end"
                                style="@style/txtPoppinsbold18"
                                android:letterSpacing="0.03"
                                android:singleLine="true"
                                android:text="Добро пожаловать" />

                            <LinearLayout
                                android:id="@+id/linearRowfavorite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="19dp"
                                 android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageFavorite"
                                    android:layout_width="@dimen/_18pxh"
                                    android:layout_height="@dimen/_16pxh"
                                    android:layout_marginTop="@dimen/_3pxv"
                                    android:layout_marginBottom="@dimen/_1pxv"
                                    android:scaleType="fitXY"
                                    tools:ignore="ContentDescription" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end|center"
                                    android:layout_marginEnd="5dp">

                                    <ImageView
                                        android:id="@+id/imageViewCart"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:padding="1dp"
                                        android:src="@drawable/ic_shopping" />

                                    <com.nex3z.notificationbadge.NotificationBadge
                                        android:id="@+id/badge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginEnd="-3dp" />
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.appcompat.widget.Toolbar>


                </LinearLayout>


            </FrameLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <!-- Ваш остальной контент -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Слайдер -->

                    <LinearLayout
                        android:id="@+id/liner0"
                        android:layout_width="match_parent"
                        style="@style/groupStylewhite_A700"

                        android:layout_height="250dp"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:gravity="start"
                        android:orientation="vertical">



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_4pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                             android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_banner" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearHomepage"
                        style="@style/groupStylewhite_A700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:gravity="start"
                        android:orientation="vertical">

                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollHorizontalscrollframesix"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true"
                            android:scrollbars="none"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/linearRowframesix"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtFrameSix"
                                    style="@style/txtSolidRoundedOutline"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.12"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_8pxv"
                                    android:paddingEnd="@dimen/_17pxh"
                                    android:paddingBottom="@dimen/_7pxv"
                                    android:singleLine="true"
                                    tools:text="@string/lbl_all" />

                                <TextView
                                    android:id="@+id/txtFrameEight"
                                    style="@style/txtRoundedOutline"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_6pxh"
                                    android:layout_weight="0.19"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_9pxv"
                                    android:paddingEnd="@dimen/_16pxh"
                                    android:paddingBottom="@dimen/_6pxv"
                                    android:singleLine="true"
                                    android:text="фрукты" />

                                <TextView
                                    android:id="@+id/txtFrameSeven"
                                    style="@style/txtRoundedOutline"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_6pxh"
                                    android:layout_weight="0.18"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_8pxv"
                                    android:paddingEnd="@dimen/_16pxh"
                                    android:paddingBottom="@dimen/_7pxv"
                                    android:singleLine="true"
                                    android:text="Овощи" />

                                <TextView
                                    android:id="@+id/txtFrameNine"
                                    style="@style/txtRoundedOutline"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_6pxh"
                                    android:layout_weight="0.17"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_9pxv"
                                    android:paddingEnd="@dimen/_16pxh"
                                    android:paddingBottom="@dimen/_6pxv"
                                    android:singleLine="true"
                                    tools:text="@string/lbl_spice" />

                                <TextView
                                    android:id="@+id/txtFrameTen"
                                    style="@style/txtRoundedOutline"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_6pxh"
                                    android:layout_weight="0.27"
                                    android:ellipsize="end"
                                    android:paddingStart="@dimen/_16pxh"
                                    android:paddingTop="@dimen/_9pxv"
                                    android:paddingEnd="@dimen/_16pxh"
                                    android:paddingBottom="@dimen/_6pxv"
                                    android:singleLine="true"
                                    tools:text="@string/lbl_heavy_food" />
                            </LinearLayout>
                        </HorizontalScrollView>

                        <LinearLayout
                            android:id="@+id/linearColumnterlarisharii"
                            android:layout_width="match_parent"
                            style="@style/groupStylewhite_A700"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_23pxv"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTerlarisharii"
                                style="@style/txtPoppinsbold18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:ellipsize="end"
                                android:letterSpacing="0.02"
                                android:singleLine="true"
                                android:text="Популярные" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewProducts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_9pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/cardview_product" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/groupStylewhite_A700"

                            android:id="@+id/linearColumnpromountukmu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_23pxv"
                            android:gravity="start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtPromountukmu2"
                                    style="@style/txtPoppinsbold18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:letterSpacing="0.02"
                                    android:singleLine="true"
                                    android:text="Категории" />

                                <ImageView
                                    android:id="@+id/imgArrow"
                                    android:layout_width="25dp"
                                    android:layout_marginStart="240dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="28dp"
                                     android:src="@drawable/ic_arrow"/>

                            </LinearLayout>



                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewCategories"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                                tools:listitem="@layout/item_category" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearColumnterlarisharii1"
                            android:layout_width="match_parent"
                            style="@style/groupStylewhite_A700"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_23pxv"
                            android:gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTerlarisharii1"
                                style="@style/txtPoppinsbold18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:ellipsize="end"
                                android:letterSpacing="0.02"
                                android:singleLine="true"
                                android:text="Все" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewProducts2"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5pxh"
                                android:layout_marginTop="@dimen/_2pxv"
                                android:layout_width="match_parent"
                                tools:listitem="@layout/cardviewall"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:spanCount="2" />
                        </LinearLayout>
                        <!-- Add other layouts here -->

                    </LinearLayout>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>
