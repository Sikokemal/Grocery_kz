<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar с Toolbar и TabLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar для заголовка страницы -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white_A700"
            app:titleTextColor="#0C0A0A"
            app:title="Мои заказы" />

        <!-- TabLayout для вкладок -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/_bg__logged_out_ek2_color"
            app:tabTextColor="#0E0B0B"
            app:tabSelectedTextColor="#0B0808"
            app:tabIndicatorColor="#0B0A0A"
            app:tabIndicatorHeight="4dp"
            app:tabMode="fixed"
            app:tabGravity="fill" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ViewPager для отображения содержимого вкладок -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/app"
         android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
