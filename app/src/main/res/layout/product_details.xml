<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/groupStylewhite_A700"

    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/groupStylewhite_A700"

            android:id="@+id/linearColumnvectorOne"
            android:layout_width="wrap_content"
            android:layout_height="4222dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_3pxv"
            android:paddingBottom="@dimen/_3pxv">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                style="@style/groupStylewhite_A700"
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_horizontal"
                app:contentInsetStart="0dp">

                <LinearLayout
                    style="@style/groupStylewhite_A700"
                    android:id="@+id/linearRowvectorOne"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginBottom="@dimen/_18pxv"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_vector"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_vector" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="260dp">

                        <!-- Ваша иконка корзины -->
                        <ImageView
                            android:id="@+id/imageViewCart"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_shopping"
                            tools:src="@drawable/ic_shopping" />

                        <!-- NotificationBadge над иконкой корзины -->
                        <com.nex3z.notificationbadge.NotificationBadge
                            android:id="@+id/badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-3dp"
                            android:layout_marginEnd="-3dp" />
                    </FrameLayout>

                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearProductdetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="-12dp"
                android:paddingStart="@dimen/_25pxh"
                android:paddingTop="@dimen/_8pxv"
                android:paddingEnd="@dimen/_25pxh"
                android:paddingBottom="@dimen/_8pxv">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_330pxh"
                    android:layout_height="@dimen/_351pxv"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerImages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp" />

                        <me.relex.circleindicator.CircleIndicator3
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="10dp" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    style="@style/groupStylewhite_A700"
                    android:id="@+id/linearRowbookmarkone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!-- Название продукта -->

                    <TextView
                        android:id="@+id/textViewProductName111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_5pxh"
                        android:singleLine="true"
                        android:text="Название продукта"
                        android:textSize="23sp" />


                    <ImageView
                        android:id="@+id/imageBookmarkoneOne"
                        android:layout_width="@dimen/_24pxh"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_134pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:id="@+id/productRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_marginStart="1dp"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="1"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:progressTint="@android:color/holo_orange_dark" /> <!-- Здесь задайте нужный вам цвет, например, holo_orange_dark -->



                    <TextView
                        android:id="@+id/ratingCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9pxv"
                        android:layout_marginStart="81dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:singleLine="true"
                        android:textSize="@dimen/_12pxh"
                        tools:text="(0)" />
                </FrameLayout>
                <include
                    android:id="@+id/quantitySelector"
                    layout="@layout/quantity_selector_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    android:id="@+id/expand_text_view"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!-- simple text view  -->
                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <!-- expandable ImageButton -->
                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent" />

                </com.ms.square.android.expandabletextview.ExpandableTextView>



                <!-- Поле для ввода комментария -->
                <EditText
                    android:id="@+id/editTextComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Добавить комментарий"
                    android:inputType="textMultiLine"
                    android:maxLines="3" />
                <!-- Рейтинг смайликами -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-52dp"
                        android:layout_marginTop="1dp"
                         android:numStars="5"
                        android:rating="3"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:stepSize="1" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSubmitReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="-22dp"
                        android:backgroundTint="@color/black"
                        android:onClick="button1"
                        android:text="Отправить отзыв"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:cornerRadius="18dp"
                        app:iconGravity="textStart" />
                </LinearLayout>

                <!-- Кнопка для отправки отзыва -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageViewShoppingCart123"
        style="@style/btnSolidRounded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="280dp"
        android:layout_marginTop="612dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        android:clickable="true"
        android:src="@drawable/ic_shopping"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|center|end"
        app:layout_behavior="FAB_Hide_on_Scroll" />

</RelativeLayout>