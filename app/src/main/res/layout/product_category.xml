<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameStackmaskgroup"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="69dp">


        <LinearLayout
            android:id="@+id/linearColumnmsarlina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="@dimen/_10pxv"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/_1pxh"
                android:gravity="center_horizontal"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearRowrewind"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageVectorOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_vector"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_vector" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtSearchProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="42dp"
                        android:layout_marginTop="12dp"
                        android:ellipsize="end"
                        style="@style/txtPoppinsbold18"
                        android:letterSpacing="0.03"
                        android:singleLine="true"
                        android:text="Категориялар" />

                    <LinearLayout
                        android:id="@+id/linearRowfavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageFavorite"
                            android:layout_width="@dimen/_18pxh"
                            android:layout_height="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_3pxv"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="1dp">

                            <ImageView
                                android:id="@+id/imageViewCart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:padding="1dp"
                                android:src="@drawable/ic_shopping" />

                            <com.nex3z.notificationbadge.NotificationBadge
                                android:id="@+id/badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="-3dp"
                                android:layout_marginEnd="-3dp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>


    </FrameLayout>
    <ScrollView
        android:fillViewport="true"
        android:id="@+id/rp0ufevw6hrr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:paddingTop="62dp"
        android:paddingBottom="-32dp"
        android:clipChildren="false"
        android:clipToPadding="false">
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/rh5e3cav61j9"
                android:textColor="#2D0C57"
                android:textSize="34sp"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="22dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Найдите свой выбор"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categoryRecyclerView"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="12dp"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/category_item2"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>