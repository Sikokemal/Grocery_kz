<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/> <!-- Скругление углов -->
            <solid android:color="@color/green_A700"/> <!-- Основной цвет фона -->
        </shape>
    </item>
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/> <!-- Скругление углов для внутреннего фона -->
            <solid android:color="@color/white"/> <!-- Цвет внутреннего фона -->
        </shape>
    </item>
</layer-list>
